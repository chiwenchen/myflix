%section.invite.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_for @invitation do |f|
        %header
          %h1 Invite a friend to join MyFlix!
        %fieldset
          .form-group
            = f.label :invitee_name, "Friend's name"
            .row
              .col-sm-4
                = f.text_field :invitee_name, class: 'form-control'
          .form-group
            = f.label :invitee_email, "Friend's Email Address"
            .row
              .col-sm-4
                = f.email_field :invitee_email, class: 'form-control'
          .form-group
            = f.label :message, 'Invitation Message'
            .row
              .col-sm-6
                = f.text_area :message, value: 'Please join this really cool site!', size: "60x6"
        %fieldset.form-group.action
          = f.submit "Send Invitation", class: 'btn btn-default'
