%article.video_category
  - @categories.each do |category|
    %header
      / %h3= link_to category.title, category_path(category)
      / better shorthand
      %h3= link_to category.title, category
    .videos.row
      - category.recent_videos.each do |video|
        .video.col-sm-2
          = link_to video do 
            / video is shorthand for video_path(video) 
            = image_tag video.thumb_image
  %hr

