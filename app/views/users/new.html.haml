%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @user, layout: :horizontal, control_col: "col-sm-6", method: 'post' do |f|
        %header
          %h1 Register
        %fieldset
          = f.email_field :email, icon: 'envelope'
          = f.password_field :password, icon: 'lock'
          = f.text_field :name, icon: 'user'
          - if @invitation
            = hidden_field_tag :invitation_token, @invitation.token                 
        %fieldset.credit_car
          .form-group
            %label.control-label.col-sm-2 Credit Card Number
            .col-sm-6
              %input.form-control(type="text")
          .form-group
            %label.control-label.col-sm-2 Security Code
            .col-sm-6
              %input.form-control(type="text")
          .form-group
            %label.control-label.col-sm-2 Expiration
            .col-sm-3
              = select_month(Date.today, {add_month_numbers: true},  class: 'form-control')
            .col-sm-2
              = select_year(Date.today.year, {start_year: Date.today.year, end_year: Date.today.year + 4}, class: 'form-control')
        %fieldset.actions.control-group.col-sm-offset-2
          .controls
            %input(type="submit" value="Sign Up" class="btn btn-default")
